<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_self_samll"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_person_self3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_approve" />

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_person_self3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="个人介绍"
        android:textColor="#ffffff"
        android:textSize="15.4sp" />
<TextView
    android:id="@+id/bainji"
    android:layout_width="45dp"
    android:layout_height="20dp"
    android:layout_alignParentRight="true"
    android:text="编辑"
    android:textColor="#ffffff"
    android:textSize="11sp"
    android:background="#376bc3"
    android:gravity="center"
    android:layout_below="@+id/tt"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    />
    <TextView
        android:id="@+id/tv_introduction_show"
        android:textColor="#ffffff"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="执指之手，与子偕老。应该是一中并肩站立，共同凝望太阳的升起。太阳落下的感觉；该是一种天边底边情不变的感觉，是见证岁月，见证感情的感觉" />

</RelativeLayout>